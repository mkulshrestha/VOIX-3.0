<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#416eff">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Once you have added atleast one command you can see it in Your commands list"
        android:id="@+id/textView11"
        android:layout_marginTop="38dp"
        android:textColor="#FFFFFF"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="When you are out of the app, there is our floating widget to take your voice commands as input"
        android:id="@+id/textView12"
        android:layout_below="@+id/textView11"
        android:layout_alignStart="@+id/textView11"
        android:layout_marginTop="49dp"
        android:textColor="#FFFFFF" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:id="@+id/imageView3"
        android:src="@drawable/mike"
        android:layout_marginEnd="89dp"
        android:layout_below="@+id/textView12"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="You can also stop the widget by the stop widget button"
        android:id="@+id/textView13"
        android:layout_marginTop="41dp"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/imageView3"
        android:layout_alignParentStart="true" />

</RelativeLayout>